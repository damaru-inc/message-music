      <HBox GridPane.rowIndex="2">
         <children>
            <ToggleButton maxWidth="1.7976931348623157E308" mnemonicParsing="false" style="-fx-background-color: lightgreen;" text="Solo" HBox.hgrow="ALWAYS">
