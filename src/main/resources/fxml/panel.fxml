                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </opaqueInsets>
            </ToggleButton>
         </children>
      </HBox>
      <HBox prefWidth="200.0" GridPane.rowIndex="3">
         <children>
            <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="value" HBox.hgrow="ALWAYS">
               <font>
                  <Font name="Courier New" size="18.0" />
               </font>
            </Label>
            <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="note" HBox.hgrow="ALWAYS">
               <font>
                  <Font name="Courier New" size="18.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </children>
